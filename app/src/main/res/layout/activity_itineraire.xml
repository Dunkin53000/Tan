<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fab="http://schemas.android.com/apk/res-auto"

    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="activity.ItineraireActivity">




    <LinearLayout
        android:id="@+id/container_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar_itineraire" />


        <com.dexafree.materialList.view.MaterialListView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:id="@+id/listitinerairephase1"
            android:measureWithLargestChild="false"
            app:column_count_landscape="1"/>

    </LinearLayout>


    <com.getbase.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/favorite"
        android:layout_alignBottom="@+id/toolbar"
        android:layout_alignParentRight="false"
        android:layout_alignParentEnd="false"
        android:layout_marginRight="0dp"
        android:layout_marginEnd="8dp"
        android:elevation="0dp"
        android:layout_marginBottom="0dp"
        fab:fab_colorPressed="?attr/colorAccent"
        fab:fab_icon="@drawable/ic_event_note_white_24dp"
        fab:fab_colorNormal="?attr/colorPrimary"
        fab:fab_size="normal"

        android:layout_alignParentTop="false"
        android:layout_alignParentBottom="false"
        android:layout_gravity="bottom|right" />




</FrameLayout>