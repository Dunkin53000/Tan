<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/headermeteo"
    android:layout_width="match_parent"
    android:layout_height="@dimen/max_height_header" >

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="@dimen/max_height_header"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="?attr/colorPrimary" />

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:padding="8dp">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/iconheader"
            android:background="@android:color/white" />


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iconheader"
            android:layout_width="50dp"
            android:layout_height="50dp"
          
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"

            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/tempsheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="Temps du jour"
            android:layout_above="@+id/temperatureheader"
            android:layout_centerHorizontal="true"
            />

        <TextView
            android:id="@+id/temperatureheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="Max et min"
            android:layout_below="@+id/iconheader"
            android:layout_centerHorizontal="true" />

        <TextView
            android:id="@+id/jourheader"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="20dp"
            android:text="Jour"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />


    </RelativeLayout>


</FrameLayout>