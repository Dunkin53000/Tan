<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="fill_parent"
    android:elevation="5dp"
    android:orientation="horizontal"
        android:layout_height="fill_parent"
        android:background="?attr/colorPrimary"
    android:id="@+id/headermeteo"
        android:padding="0dp"
        android:gravity="center_horizontal">


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginTop="30dp"
            android:gravity="center_horizontal">

            <ImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/iconheader"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_below="@+id/textView1"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="5dp"

            android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/jourheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:text="Jour"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true" />

                <TextView
                    android:id="@+id/tempsheader"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:text="Temps du jour"
                    android:layout_below="@+id/jour"
                    android:layout_centerHorizontal="true" />


                <TextView
                    android:id="@+id/temperatureheader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="#fff"
                    android:textSize="30dp"
                    android:text="Max et min"
                    android:layout_below="@+id/tempsheader"
                    android:layout_centerHorizontal="true"
                    android:gravity="center_vertical|right"
                    android:layout_gravity="right" />
            </LinearLayout>

        </LinearLayout>


</LinearLayout>


